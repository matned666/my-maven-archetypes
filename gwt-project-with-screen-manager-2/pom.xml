    <modelVersion>4.0.0</modelVersion>

    <artifactId>gwt-project-with-screen-manager-2</artifactId>
    <version>0.2</version>
    <packaging>maven-archetype</packaging>

    <name>GWT Project simple archetype with SM</name>
    <description>A simple archetype for generating a short GWT projects ready code with screen manager-without css styles</description>
    <url>https://github.com/matned666/PlatformGame</url>

    <developers>
        <developer>
            <id>matned</id>
            <name>Mateusz Niedbal</name>
            <email>mat.niedbal@mrndesign.eu</email>
            <organization>mrndesign.eu</organization>
            <organizationUrl>https://mrndesign.eu</organizationUrl>
            <roles>
                <role>Architect</role>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <profiles>
        <profile>
            <id>release</id>
        </profile>
    </profiles>

    <scm>
        <connection>scm:git:git://github.com/matned666/gwt-simple-mvn-archetype.git</connection>
        <developerConnection>scm:git:ssh://github.com/matned666/gwt-simple-mvn-archetype.git</developerConnection>
        <url>https://github.com/matned666/gwt-simple-mvn-archetype</url>
    </scm>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>3.1.1</version>
            </extension>
        </extensions>
    </build>

</project>